<div class="container">
	<div class="jumbotron">
		<h2>Listing transactions</h2>

		<table class="table table-striped">
			<thead>
				<tr>
					<th>From account</th>
					<th>To account</th>
					<th>Amount</th>
					<th>Balance</th>
					<th>Payment date</th>
					<th>Remarks</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @transactions.each do |transaction| %>
				<tr>
					<td><%= transaction.from_account %></td>
					<td><%= transaction.to_account %></td>
					<td><%= transaction.amount %></td>
					<td><%= transaction.balance %></td>
					<td><%= transaction.payment_date %></td>
					<td><%= transaction.remarks %></td>
					<td><%= link_to 'Show', transaction, class: "btn btn-primary btn-xs"  %></td>
					<td><%= link_to 'Edit', edit_transaction_path(transaction), class: "btn btn-warning btn-xs"  %></td>
					<td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs"  %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<br>

		<%= link_to 'New Transaction', new_transaction_path, class: "btn btn-primary" %>
	</div>
</div>
